<br><h1 class="text-center">Here are your letters:</h1><br>

<div class="d-flex justify-content-center mb-4">
  <ul class="list-unstyled d-flex flex-wrap justify-content-center">
    <% @letters.each do |letter| %>
      <div class="btn btn-primary m-1" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; font-size: 20px;">
        <%= letter %>
      </div>
    <% end %>
  </ul>
</div>

<div class="d-flex justify-content-center">
  <form action="/score" method="post" data-turbo="false" class="w-25 text-center">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

    <div class="form-group">
      <input type="text" name="response" class="form-control" placeholder="Your response">
    </div>
    <input type="submit" value="Submit" class="btn btn-primary w-100 mt-3">
  </form>
</div>
